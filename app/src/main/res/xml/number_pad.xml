<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="25%p"
    android:horizontalGap="2px"
    android:verticalGap="2px"
    android:keyHeight="60dp">
    
    <!-- Row 1: 1 2 3 -->
    <Row>
        <Key android:codes="49" android:keyLabel="1" android:keyEdgeFlags="left"/>
        <Key android:codes="50" android:keyLabel="2"/>
        <Key android:codes="51" android:keyLabel="3"/>
        <Key android:codes="-5" 
            android:keyLabel="@string/key_label_backspace"
            android:keyWidth="25%p"
            android:isRepeatable="true"
            android:keyEdgeFlags="right"/>
    </Row>
    
    <!-- Row 2: 4 5 6 -->
    <Row>
        <Key android:codes="52" android:keyLabel="4" android:keyEdgeFlags="left"/>
        <Key android:codes="53" android:keyLabel="5"/>
        <Key android:codes="54" android:keyLabel="6"/>
        <Key android:codes="-4" 
            android:keyLabel="@string/key_label_enter"
            android:keyWidth="25%p"
            android:keyEdgeFlags="right"/>
    </Row>
    
    <!-- Row 3: 7 8 9 -->
    <Row>
        <Key android:codes="55" android:keyLabel="7" android:keyEdgeFlags="left"/>
        <Key android:codes="56" android:keyLabel="8"/>
        <Key android:codes="57" android:keyLabel="9"/>
        <Key android:codes="-2" 
            android:keyLabel="@string/key_label_abc"
            android:keyWidth="25%p"
            android:keyEdgeFlags="right"/>
    </Row>
    
    <!-- Row 4: Symbol switch, 0, Dot, Comma -->
    <Row>
        <Key android:codes="45" android:keyLabel="-" android:keyWidth="25%p" android:keyEdgeFlags="left"/>
        <Key android:codes="48" android:keyLabel="0" android:keyWidth="25%p"/>
        <Key android:codes="46" android:keyLabel="." android:keyWidth="25%p"/>
        <Key android:codes="44" android:keyLabel="," android:keyWidth="25%p" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>